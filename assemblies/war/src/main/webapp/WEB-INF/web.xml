<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <display-name>GraniteDS Pojo</display-name>
  <description>GraniteDS Pojo Application</description>


  <!-- Granite config context listener -->
  <listener>
    <listener-class>
      org.granite.config.GraniteConfigListener
    </listener-class>
  </listener>

  <filter>
    <filter-name>AMFMessageFilter</filter-name>
    <filter-class>
      org.granite.messaging.webapp.AMFMessageFilter
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AMFMessageFilter</filter-name>
    <url-pattern>/graniteamf/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>AMFMessageServlet</servlet-name>
    <servlet-class>
      org.granite.messaging.webapp.AMFMessageServlet
    </servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
  	<display-name>UploadFileServlet</display-name>
  	<servlet-name>UploadFileServlet</servlet-name>
  	<servlet-class>
      org.ow2.jasmine.kerneos.common.servlet.UploadFileServlet
    </servlet-class>
  </servlet>

  <servlet>
    <display-name>ExportBitmapServlet</display-name>
    <servlet-name>ExportBitmapServlet</servlet-name>
    <servlet-class>
      org.ow2.jasmine.kerneos.common.servlet.ExportBitmapServlet
    </servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ExportBitmapServlet</servlet-name>
    <url-pattern>/ExportBitmapServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>UploadFileServlet</servlet-name>
    <url-pattern>/UploadFileServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AMFMessageServlet</servlet-name>
    <url-pattern>/graniteamf/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>Kerneos.html</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
