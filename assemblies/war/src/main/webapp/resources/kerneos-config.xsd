<xs:schema
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    elementFormDefault="qualified"
    targetNamespace="org.ow2.jasmine.kerneos:kerneos-config"
    xmlns:k="org.ow2.jasmine.kerneos:kerneos-config">


    <!--##################################################################################
    # kerneos-config
    ###################################################################################-->

    <xs:element name="kerneos-config">
        <xs:complexType>
            <xs:all>
                <xs:element ref="k:application-project" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:application-name" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:application-logo" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:show-minimize-all-button" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:show-cascade-button" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:show-tile-button" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:show-notification-popups" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:show-popups-from-active-window" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:enable-notifications-log" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:show-confirm-close-dialog" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:default-language" maxOccurs="1" minOccurs="0" />
                <xs:element ref="k:modules" maxOccurs="1" minOccurs="1" />
            </xs:all>
        </xs:complexType>
    </xs:element>


    <!--##################################################################################
    # Options
    ###################################################################################-->


    <xs:element name="application-project" type="xs:string" default="JASMINe" />
    <xs:element name="application-name" type="xs:string" default="Kerneos" />
    <xs:element name="application-logo" type="xs:string" />
    <xs:element name="show-minimize-all-button" type="xs:boolean" default="true" />
    <xs:element name="show-cascade-button" type="xs:boolean" default="true" />
    <xs:element name="show-tile-button" type="xs:boolean" default="true" />
    <xs:element name="show-notification-popups" type="xs:boolean" default="true" />
    <xs:element name="show-popups-from-active-window" type="xs:boolean" default="false" />
    <xs:element name="enable-notifications-log" type="xs:boolean" default="true" />
    <xs:element name="show-confirm-close-dialog" type="xs:boolean" default="true" />
    <xs:element name="default-language" type="xs:string" default="en_US" />


    <!--##################################################################################
    # Modules
    ###################################################################################-->

    <!-- The modules list -->

    <xs:element name="modules">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="k:modules-list" maxOccurs="unbounded" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="modules-list" type="k:module" />

    <!-- Module main structure -->

    <xs:complexType name="module">
      <xs:sequence>
          <xs:element name="name" type="xs:string" maxOccurs="1" minOccurs="1" />
          <xs:element name="description" type="xs:string" maxOccurs="1" minOccurs="1" />
          <xs:element name="small-icon" type="xs:string" maxOccurs="1" minOccurs="0" />
          <xs:element name="big-icon" type="xs:string" maxOccurs="1" minOccurs="0" />
      </xs:sequence>
    </xs:complexType>



    <xs:complexType name="module-with-window">
      <xs:complexContent>
        <xs:extension base="k:module">
          <xs:sequence>
            <xs:element name="load-maximized" type="xs:boolean" maxOccurs="1" minOccurs="0" default="false" />
            <xs:element name="load-on-startup" type="xs:boolean" maxOccurs="1" minOccurs="0" default="false" />
            <xs:element name="prompt-before-close" type="k:prompt-before-close" maxOccurs="1" minOccurs="0" default="default" />
            <xs:element name="width" type="xs:integer" maxOccurs="1" minOccurs="0" />
            <xs:element name="height" type="xs:integer" maxOccurs="1" minOccurs="0" />
            <xs:element name="resizable" type="xs:boolean" maxOccurs="1" minOccurs="0" default="true" />
            <xs:element name="maximizable" type="xs:boolean" maxOccurs="1" minOccurs="0" default="true" />
          </xs:sequence>
        </xs:extension>
      </xs:complexContent>
    </xs:complexType>


    <!-- Modules types -->

    <xs:element name="iframe-module" substitutionGroup="k:modules-list">
      <xs:complexType>
        <xs:complexContent>
          <xs:extension base="k:module-with-window">
            <xs:sequence>
              <xs:element name="url" type="xs:anyURI" maxOccurs="1" minOccurs="1" />
              <xs:element name="show-open-in-browser-button" type="xs:boolean" maxOccurs="1" minOccurs="0" default="false" />
              <xs:element name="show-history-navigation-buttons" type="xs:boolean" maxOccurs="1" minOccurs="0" default="false" />
            </xs:sequence>
          </xs:extension>
        </xs:complexContent>
      </xs:complexType>
    </xs:element>

    <xs:element name="swf-module" substitutionGroup="k:modules-list">
      <xs:complexType>
        <xs:complexContent>
          <xs:extension base="k:module-with-window">
            <xs:sequence>
              <xs:element name="file" type="xs:string" maxOccurs="1" minOccurs="1" />
              <xs:element ref="k:services" maxOccurs="1" minOccurs="0" />
            </xs:sequence>
          </xs:extension>
        </xs:complexContent>
      </xs:complexType>
    </xs:element>

    <xs:element name="link" substitutionGroup="k:modules-list">
      <xs:complexType>
        <xs:complexContent>
          <xs:extension base="k:module">
            <xs:sequence>
              <xs:element name="url" type="xs:anyURI" maxOccurs="1" minOccurs="1" />
            </xs:sequence>
          </xs:extension>
        </xs:complexContent>
      </xs:complexType>
    </xs:element>

    <xs:element name="folder" substitutionGroup="k:modules-list">
      <xs:complexType>
        <xs:complexContent>
          <xs:extension base="k:module-with-window">
            <xs:sequence>
              <xs:element ref="k:modules" maxOccurs="1" minOccurs="1" />
            </xs:sequence>
          </xs:extension>
        </xs:complexContent>
      </xs:complexType>
    </xs:element>


    <!-- Services -->

    <xs:element name="services">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="k:service" maxOccurs="unbounded" minOccurs="1" />
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="service">
        <xs:complexType>
            <xs:attribute name="destination" use="required" type="xs:string" />
            <xs:attribute name="id" use="required" type="xs:string" />
        </xs:complexType>
    </xs:element>


    <!-- Module options types -->

    <xs:simpleType name="prompt-before-close">
        <xs:restriction base="xs:string">
            <xs:enumeration value="default"/>
            <xs:enumeration value="always"/>
            <xs:enumeration value="never"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>
