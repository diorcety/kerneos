<mx:HBox xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:commonControls = "org.ow2.jasmine.kerneos.common.controls.*">

    <fx:Metadata>
        <![CDATA[
        /**
         * The component displayed while iframes are loading.
         *
         * @author Julien Nicoulaud
         */
        ]]>
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
            import mx.resources.ResourceManager;
            import org.ow2.jasmine.kerneos.core.managers.LanguagesManager;
        ]]>
    </fx:Script>

    <commonControls:KerneosProgressBar id = "iFrameProgressBar"
                                       indeterminate = "true"
                                       label = "{ResourceManager.getInstance().getString(LanguagesManager.LOCALE_RESOURCE_BUNDLE,'kerneos.windows.iframe.loading-bar.label')}"
                                       trackHeight = "20"
                                       color = "#EFEFEF"
                                       borderColor = "#EFEFEF"
                                       barColor = "#666666"
                                       trackColors = "{[0x444444,0x444444]}" />
</mx:HBox>
