<mx:HBox xmlns:fx="http://ns.adobe.com/mxml/2009"
         xmlns:mx="library://ns.adobe.com/flex/mx"
         xmlns:commonView="org.ow2.jasmine.kerneos.common.view.*"
         implements="mx.controls.listClasses.IListItemRenderer"
         paddingBottom="3"
         paddingLeft="3"
         paddingRight="3"
         paddingTop="3"
         width="100%"
         height="100%">
    
    <fx:Script>
    <![CDATA[

    import org.ow2.jasmine.kerneos.core.vo.ModuleVO;
    import org.ow2.jasmine.kerneos.core.vo.KerneosNotification;

    // =========================================================================
    // Properties
    // =========================================================================

    /**
    * The kerneos notification object
    */    
    [Bindable]
    private var _notif : KerneosNotification = null;
    
    
    // =========================================================================
    // Data object handling
    // =========================================================================
    
    /**
    * Get the item renderer data object
    */
    [Bindable("dataChange")]
    override public function get data():Object
    {
        return _notif;
    }
    
    /**
    * Set the item renderer data object
    */
    override public function set data(value:Object):void
    {
        _notif = value as KerneosNotification;
        invalidateProperties();
        dispatchEvent(new Event("dataChange"));
    }
    
    ]]>
    </fx:Script>
    
    <!-- The module thumbnail -->
    <commonView:SmoothImage id="moduleThumb"
                       source="{_notif.module.getSmallIconClass(moduleThumb)}"
                       width="16"
                       height="16"/>
                       
    <!-- The module name -->
    <mx:Text selectable="false"
             text="{_notif.module.name}"
             width="100%"/>
             
</mx:HBox>
