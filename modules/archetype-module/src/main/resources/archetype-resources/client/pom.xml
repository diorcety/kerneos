<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
  </parent>

  <name>${groupId} :: ${artifactId}-client</name>

  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}-client</artifactId>

  <packaging>swf</packaging>

  <dependencies>

      <dependency>
      <groupId>org.ow2.jasmine.kerneos</groupId>
      <artifactId>cairngorm-kerneos</artifactId>
      <version>${cairngorm.version}</version>
      <type>swc</type>
    </dependency>

    <!-- Common classes form JASMINe-EoS -->
    <!--
    <dependency>
      <groupId>org.ow2.jasmine.monitoring</groupId>
      <artifactId>jasmine-eos-common-client</artifactId>
      <version>${jasmine-eos.version}</version>
      <type>swc</type>
    </dependency>
    -->

    <dependency>
      <groupId>org.ow2.jasmine.kerneos</groupId>
      <artifactId>kerneos-common-client</artifactId>
      <version>${kerneos.version}</version>
      <type>swc</type>
    </dependency>

    <dependency>
      <groupId>org.ow2.jasmine.kerneos</groupId>
      <artifactId>kerneos-api</artifactId>
      <version>${kerneos.version}</version>
      <type>swc</type>
    </dependency>

    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-enforcer-plugin</artifactId>
      <version>1.0-alpha-3</version>
    </dependency>

    <!-- Flex -->
    <dependency>
      <groupId>com.adobe.flex.framework</groupId>
      <artifactId>flex-framework</artifactId>
      <version>${flex.version}</version>
      <type>pom</type>
    </dependency>

  </dependencies>

  <build>
    <sourceDirectory>${basedir}/src/main/flex</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.sonatype.flexmojos</groupId>
        <artifactId>flexmojos-maven-plugin</artifactId>
        <configuration>
          <compiledLocales>
            <locale>en_US</locale>
            <locale>fr_FR</locale>
          </compiledLocales>
          <mergeResourceBundle>true</mergeResourceBundle>
          <licenses>
            <flexbuilder3>${licence.flexbuilder3}</flexbuilder3>
          </licenses>
          <contextRoot>moduleContextRoot</contextRoot>
          <sourceFile>MyModule.mxml</sourceFile>
          <optimize>false</optimize>
        </configuration>
      </plugin>

    </plugins>

    <finalName>myModule</finalName>
  </build>
</project>