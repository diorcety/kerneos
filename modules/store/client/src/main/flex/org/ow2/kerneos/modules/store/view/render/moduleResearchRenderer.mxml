<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                autoDrawBackground="true">

    <fx:Script>
		<![CDATA[
        import mx.controls.Alert;

        import com.adobe.cairngorm.control.CairngormEventDispatcher;

        import org.ow2.kerneos.modules.store.event.ChangeStoreStateEvent;
        import org.ow2.kerneos.modules.store.vo.ModuleVO;

        protected function installModuleButton_clickHandler(event:MouseEvent):void {
            Alert.show("Install " + data.name);
        }

        protected function moduleIcon_clickHandler(event:MouseEvent):void {
            if (event.target.id != "installModuleButton") {
                var evt : ChangeStoreStateEvent = new ChangeStoreStateEvent(ChangeStoreStateEvent.CHANGE_MODULE_STATE);
                evt.state = "ModuleDetail";
                evt.moduleDetail = data as ModuleVO;
                CairngormEventDispatcher.getInstance().dispatchEvent(evt);
            }
        }
        ]]>
	</fx:Script>

    <s:HGroup id="module1" width="545" height="100" click="moduleIcon_clickHandler(event)" >
        <s:Image id="moduleIconImg" x="0" y="0" width="100" height="100" source="{data.icon}"/>
        <s:VGroup horizontalAlign="center" width="126" height="100">
            <s:Label x="104" y="4" width="114" height="26" fontWeight="bold" text="{data.name}"
                     textAlign="center" verticalAlign="middle"/>
            <s:Label x="104" y="36" width="114" text="{data.author}" textAlign="center"
                     verticalAlign="middle"/>
            <s:Label x="104" y="56" width="114" text="{data.category}" textAlign="center"
                     verticalAlign="middle"/>
            <s:Button id="installModuleButton" label="Install"
                      click="installModuleButton_clickHandler(event)"/>
        </s:VGroup>
        <s:Label x="226" y="0" width="319" height="99" text="{data.description}"/>
    </s:HGroup>
</s:ItemRenderer>
