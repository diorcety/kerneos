<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.ow2.jasmine.kerneos</groupId>
    <artifactId>kerneos-modules</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>cairngorm-kerneos</artifactId>

  <name>Kerneos :: Modules :: Libraries :: Login :: Client</name>

  <packaging>swc</packaging>

  <dependencies>

    <dependency>
      <groupId>net.israfil.mojo</groupId>
      <artifactId>maven-flex2-plugin</artifactId>
      <version>1.3</version>
    </dependency>

    <dependency>
      <groupId>org.apache.maven.plugins</groupId>
      <artifactId>maven-enforcer-plugin</artifactId>
      <version>1.0-alpha-3</version>
    </dependency>

    <!-- Tests -->

  </dependencies>
  <build>
    <plugins>

      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>net.israfil.mojo</groupId>
        <artifactId>maven-flex2-plugin</artifactId>
        <version>1.3</version>
        <extensions>true</extensions>

        <configuration>
          <flexHome>${flex.home}</flexHome>
                    <extraParameters>
            <parameter>
              <name>include-resource-bundles</name>
              <values>
                <value>CairngormMessages</value>
              </values>
            </parameter>
            <parameter>
              <name>namespace</name>
              <values>
                <value>http://www.adobe.com/2006/cairngorm</value>
                <value>cairngorm-manifest.xml</value>
              </values>
            </parameter>
          </extraParameters>
        </configuration>

      </plugin>

    </plugins>
    <finalName>Cairngorm-kerneos</finalName>
  </build>
</project>
