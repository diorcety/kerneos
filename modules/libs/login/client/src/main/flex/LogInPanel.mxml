<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009"
           xmlns:mx="library://ns.adobe.com/flex/mx"
           pageTitle="EoS"
           xmlns:view="org.ow2.jasmine.kerneos.login.view.*"
           xmlns:control="org.ow2.jasmine.kerneos.login.control.*"
           xmlns:business="org.ow2.jasmine.kerneos.login.business.*"
           backgroundAlpha="0.0">

    <fx:Declarations>
        <!--business:Services id="services" /-->
        <control:Controller id="controller"/>
    </fx:Declarations>

    <fx:Script>
        <![CDATA[
        public function logIn():void {
            loginpanel.logIn();
        }

        public function reset():void {
            loginpanel.user.text = "";
            loginpanel.password.text = "";
        }

        public function logout():void {
            loginpanel.logOut();
        }
        ]]>
    </fx:Script>

    <!-- Main view -->
    <view:LoginPanelMain id="loginpanel"
                         width="100%"
                         height="100%"/>

</mx:Canvas>