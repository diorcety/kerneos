<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="75%" xmlns:local="*">
    
    <mx:Script>
        <![CDATA[
            import org.ow2.jasmine.kerneos.login.event.LogOutEvent;
            import mx.controls.Alert;
            import org.ow2.jasmine.kerneos.login.model.LogInModelLocator;
            import com.adobe.cairngorm.control.CairngormEventDispatcher;
            import org.ow2.jasmine.kerneos.login.event.LogInEvent;
            
            public function logIn():void {
                var event:LogInEvent = new LogInEvent(LogInEvent.LOG_IN);
                event.user = user.text;
                event.password = password.text;
                CairngormEventDispatcher.getInstance().dispatchEvent(event);
                
                return ;
            }
            
            public function logOut():void {
                var event:LogOutEvent = new LogOutEvent(LogOutEvent.LOG_OUT);
                CairngormEventDispatcher.getInstance().dispatchEvent(event);
                return;
            }
        ]]>
    </mx:Script>
    
        <mx:Form width="100%" height="100%">
            <mx:FormHeading label="Please fill in the form to log in" />
            
            <mx:FormItem label="User">
                <mx:TextInput id="user" width="180"/>
            </mx:FormItem>
            
            <mx:FormItem label="Password">
                <mx:TextInput id="password" width="180" displayAsPassword="true"/>
            </mx:FormItem>
            
        </mx:Form>     
    
</mx:VBox>
