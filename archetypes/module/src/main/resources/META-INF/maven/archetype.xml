    <resource>client/src/main/flex/event/ModuleEvent.as</resource>
    <resource>client/src/main/flex/model/ModuleModelLocator.as</resource>
    <resource>client/src/main/flex/view/MainView.mxml</resource>
    <resource>client/src/main/flex/MyModule.mxml</resource>

    <!-- Client side data -->
    <resource>client/pom.xml</resource>
    <resource>client/src/main/locales/en_US/moduleResources.properties</resource>
    <resource>client/src/main/locales/fr_FR/moduleResources.properties</resource>
    <resource>client/src/main/locales/fr_FR/CairngormMessages.properties</resource>
