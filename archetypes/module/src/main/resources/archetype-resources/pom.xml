<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}</artifactId>
  <version>${version}</version>

  <packaging>pom</packaging>

  <name>${groupId} :: ${artifactId}</name>

  <properties>
    <flexmojos.version>3.7.1</flexmojos.version>
    <ipojo.version>1.8.0</ipojo.version>
    <junit.version>3.8.1</junit.version>
    <kerneos.version>2.1.0-SNAPSHOT</kerneos.version>

    <!-- Flex -->
    <flex.version>4.1.0.16076</flex.version>
    <player.version>10.2</player.version>

    <!-- Plugins -->
    <maven-bundle.version>2.3.4</maven-bundle.version>
    <maven-compiler.version>2.3.2</maven-compiler.version>
    <maven-dependency.version>2.0</maven-dependency.version>
    <maven.enforcer.version>1.0-alpha-3</maven.enforcer.version>
  </properties>

  <modules>
    <module>client</module>
    <module>server</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <version>${maven.enforcer.version}</version>
      </dependency>

      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>${junit.version}</version>
        <scope>test</scope>
      </dependency>

      <!-- iPOJO -->
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.ipojo.annotations</artifactId>
        <version>${ipojo.version}</version>
      </dependency>

      <!-- Kerneos -->
      <dependency>
        <groupId>org.ow2.kerneos</groupId>
        <artifactId>kerneos-core-client</artifactId>
        <version>${kerneos.version}</version>
        <scope>provided</scope>
      </dependency>
      <dependency>
        <groupId>org.ow2.kerneos</groupId>
        <artifactId>kerneos-core-server</artifactId>
        <version>${kerneos.version}</version>
        <scope>provided</scope>
      </dependency>

      <!-- Flex -->
      <dependency>
        <groupId>com.adobe.flex.framework</groupId>
        <artifactId>flex-framework</artifactId>
        <version>${flex.version}</version>
        <type>pom</type>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
