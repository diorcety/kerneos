<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>\${groupId}</groupId>
  <artifactId>\${artifactId}</artifactId>
  <version>\${version}</version>

  <packaging>pom</packaging>

  <name>\${groupId} :: \${artifactId}</name>

  <modules>
    <module>application</module>
    <module>packaging</module>
  </modules>

  <properties>
    <!-- Dependencies versions -->
    <granite-core.version>${graniteds-osgi.version}</granite-core.version>
    <granite-gravity-ea.version>${graniteds-osgi.version}</granite-gravity-ea.version>
    <granite-gravity-jms.version>${graniteds-osgi.version}</granite-gravity-jms.version>
    <granite-gravity.version>${graniteds-osgi.version}</granite-gravity.version>
    <ow2-util-log.version>1.0.23</ow2-util-log.version>
    <org.apache.felix.main.version>3.2.2</org.apache.felix.main.version>
    <pax-confman-propsloader.version>0.2.2</pax-confman-propsloader.version>
    <pax-logging-api.version>1.6.0</pax-logging-api.version>
    <pax-logging-service.version>1.6.0</pax-logging-service.version>
    <org.apache.felix.bundlerepository.version>1.6.2</org.apache.felix.bundlerepository.version>
    <org.apache.felix.configadmin.version>1.2.8</org.apache.felix.configadmin.version>
    <org.apache.felix.eventadmin.version>1.2.8</org.apache.felix.eventadmin.version>
    <org.apache.felix.fileinstall.version>3.1.10</org.apache.felix.fileinstall.version>
    <org.apache.felix.gogo.command.version>0.8.0</org.apache.felix.gogo.command.version>
    <org.apache.felix.gogo.runtime.version>0.8.0</org.apache.felix.gogo.runtime.version>
    <org.apache.felix.gogo.shell.version>0.8.0</org.apache.felix.gogo.shell.version>
    <org.apache.felix.http.jetty.version>2.2.0</org.apache.felix.http.jetty.version>
    <org.apache.felix.ipojo.handler.eventadmin.version>1.6.0</org.apache.felix.ipojo.handler.eventadmin.version>
    <org.apache.felix.ipojo.handler.extender.version>1.4.0</org.apache.felix.ipojo.handler.extender.version>
    <org.apache.felix.ipojo.version>1.8.0</org.apache.felix.ipojo.version>
    <org.osgi.compendium.version>1.4.0</org.osgi.compendium.version>
    <ow2-util-i18n.version>1.0.23</ow2-util-i18n.version>
    <kerneos-core-server.version>${project.version}</kerneos-core-server.version>
    <kerneos-profile-fileinstall.version>${project.version}</kerneos-profile-fileinstall.version>
    <maven-assembly-plugin.version>2.2.1</maven-assembly-plugin.version>
    <com.springsource.javax.transaction.version>1.1.0</com.springsource.javax.transaction.version>
    <com.springsource.javax.jms.version>1.1.0</com.springsource.javax.jms.version>
    <ipojo.version>${ipojo.version}</ipojo.version>
    <maven-bundle.version>${maven.bundle.version}</maven-bundle.version>
    <maven-war.version>2.1.1</maven-war.version>
    <maven-dependency.version>${maven.dependency.version}</maven-dependency.version>
    <ow2-util.version>1.0.31</ow2-util.version>
    <kerneos-login-loginmodule.version>${project.version}</kerneos-login-loginmodule.version>
  </properties>

  <repositories>
    <repository>
      <id>ops4j.repository</id>
      <url>http://repository.ops4j.org/maven2</url>
    </repository>
    <repository>
      <id>repo objectweb</id>
      <url>http://maven.objectweb.org/maven2</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>repo objectweb snapshots</id>
      <url>http://maven.objectweb.org/maven2-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <dependencyManagement>
    <dependencies>
      <!--Felix Packaging Dependencies-->
      <dependency>
        <groupId>org.ow2.bundles</groupId>
        <artifactId>ow2-util-log</artifactId>
        <version>\${ow2-util-log.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.main.distribution</artifactId>
        <version>\${org.apache.felix.main.version}</version>
        <classifier>project</classifier>
        <type>zip</type>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.ops4j.pax.confman</groupId>
        <artifactId>pax-confman-propsloader</artifactId>
        <version>\${pax-confman-propsloader.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.ops4j.pax.logging</groupId>
        <artifactId>pax-logging-api</artifactId>
        <version>\${pax-logging-api.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.ops4j.pax.logging</groupId>
        <artifactId>pax-logging-service</artifactId>
        <version>\${pax-logging-service.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.bundlerepository</artifactId>
        <version>\${org.apache.felix.bundlerepository.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.configadmin</artifactId>
        <version>\${org.apache.felix.configadmin.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.eventadmin</artifactId>
        <version>\${org.apache.felix.eventadmin.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.fileinstall</artifactId>
        <version>\${org.apache.felix.fileinstall.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.gogo.command</artifactId>
        <version>\${org.apache.felix.gogo.command.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.gogo.runtime</artifactId>
        <version>\${org.apache.felix.gogo.runtime.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.gogo.shell</artifactId>
        <version>\${org.apache.felix.gogo.shell.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.http.jetty</artifactId>
        <version>\${org.apache.felix.http.jetty.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.ipojo.handler.eventadmin</artifactId>
        <version>\${org.apache.felix.ipojo.handler.eventadmin.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.ipojo.handler.extender</artifactId>
        <version>\${org.apache.felix.ipojo.handler.extender.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.apache.felix.ipojo</artifactId>
        <version>\${org.apache.felix.ipojo.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.felix</groupId>
        <artifactId>org.osgi.compendium</artifactId>
        <version>${org.osgi.compendium.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.ow2.bundles</groupId>
        <artifactId>ow2-util-i18n</artifactId>
        <version>\${ow2-util-i18n.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.graniteds-osgi</groupId>
        <artifactId>granite-core</artifactId>
        <version>\${granite-core.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.graniteds-osgi</groupId>
        <artifactId>granite-gravity-ea</artifactId>
        <version>\${granite-gravity-ea.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.graniteds-osgi</groupId>
        <artifactId>granite-gravity-jms</artifactId>
        <version>\${granite-gravity-jms.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.graniteds-osgi</groupId>
        <artifactId>granite-gravity</artifactId>
        <version>\${granite-gravity.version}</version>
        <scope>runtime</scope>
      </dependency>
      <!-- Asynchronous communication dependencies -->
      <dependency>
        <groupId>javax.transaction</groupId>
        <artifactId>com.springsource.javax.transaction</artifactId>
        <version>\${com.springsource.javax.transaction.version}</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>javax.jms</groupId>
        <artifactId>com.springsource.javax.jms</artifactId>
        <version>\${com.springsource.javax.jms.version}</version>
        <scope>runtime</scope>
      </dependency>
      <!--Kerneos 2 Dependencies-->
      <dependency>
        <groupId>org.ow2.kerneos</groupId>
        <artifactId>kerneos-core-server</artifactId>
        <version>\${kerneos-core-server.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ow2.kerneos</groupId>
        <artifactId>kerneos-login-loginmodule</artifactId>
        <version>\${kerneos-login-loginmodule.version}</version>
      </dependency>
      <dependency>
        <groupId>org.ow2.kerneos</groupId>
        <artifactId>kerneos-profile-fileinstall</artifactId>
        <version>\${kerneos-profile-fileinstall.version}</version>
      </dependency>
      <!--Application Dependency-->
      <dependency>
        <groupId>\${project.groupId}</groupId>
        <artifactId>${rootArtifactId}-application</artifactId>
        <version>\${project.version}</version>
        <scope>runtime</scope>
      </dependency>
      <!-- Add your kerneos modules dependencies here-->
    </dependencies>
  </dependencyManagement>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <version>\${maven-assembly-plugin.version}</version>
        </plugin>
        <plugin>
          <groupId>org.ow2.util.maven</groupId>
          <artifactId>maven-jbuilding-plugin</artifactId>
          <version>\${ow2-util.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

</project>
