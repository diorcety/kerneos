<assembly
 xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>Felix</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <moduleSets>
   <!--Kerneos application module-->
   <moduleSet>
    <useAllReactorProjects>true</useAllReactorProjects>
    <includes>
     <include>${groupId}:${application.artifactId}</include>
    </includes>
    <binaries>
     <dependencySets>
       <dependencySet>
         <excludes>
           <exclude>*</exclude>
         </excludes>
      </dependencySet>
     </dependencySets>
     <outputDirectory>load</outputDirectory>
     <unpack>false</unpack>
     <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
    </binaries>
   </moduleSet>
   <!-- Add your kerneos modules here -->
  </moduleSets>

  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory/>
    </fileSet>
  </fileSets>

  <dependencySets>
    <!--Felix Dependency-->
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>felix.jar</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.main</include>
      </includes>
      <outputDirectory>bin</outputDirectory>
    </dependencySet>
    <!-- Felix Log Bundles -->
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.ops4j.pax.confman:pax-confman-propsloader</include>
      </includes>
      <outputDirectory>bundle/log</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.ops4j.pax.logging:pax-logging-api</include>
      </includes>
      <outputDirectory>bundle/log</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.ops4j.pax.logging:pax-logging-service</include>
      </includes>
      <outputDirectory>bundle/log</outputDirectory>
    </dependencySet>
    <!-- Bundles -->
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.bundlerepository</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.configadmin</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.eventadmin</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.fileinstall</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.gogo.command</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.gogo.runtime</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.gogo.shell</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.http.jetty</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.ipojo.handler.eventadmin</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.ipojo.handler.extender</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.apache.felix:org.apache.felix.ipojo</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.osgi:org.osgi.compendium</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.ow2.bundles:ow2-util-i18n</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.ow2.bundles:ow2-util-log</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.graniteds-osgi:granite-core</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.graniteds-osgi:granite-gravity-ea</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.graniteds-osgi:granite-gravity-jms</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.graniteds-osgi:granite-gravity</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
    <!--Kerneos Core Dependency-->
    <dependencySet>
      <unpack>false</unpack>
      <outputFileNameMapping>${artifact.file.name}</outputFileNameMapping>
      <includes>
        <include>org.ow2.kerneos:kerneos-core-server</include>
      </includes>
      <outputDirectory>bundle</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>