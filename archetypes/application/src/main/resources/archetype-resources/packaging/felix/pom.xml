<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}-packaging</artifactId>
    <version>${version}</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}-packaging-felix</artifactId>
  <version>${version}</version>
  <name>${groupId} :: ${artifactId} :: Packaging :: Felix</name>

  <repositories>
    <repository>
      <id>ops4j.repository</id>
      <url>http://repository.ops4j.org/maven2</url>
    </repository>
    <repository>
      <id>repo objectweb</id>
      <url>http://maven.objectweb.org/maven2</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>repo objectweb snapshots</id>
      <url>http://maven.objectweb.org/maven2-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.main.distribution</artifactId>
                  <classifier>project</classifier>
                  <type>zip</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/felix</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
          <execution>
            <id>copy</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <!-- Log -->
                <artifactItem>
                  <groupId>org.ops4j.pax.confman</groupId>
                  <artifactId>pax-confman-propsloader</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle/log</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ops4j.pax.logging</groupId>
                  <artifactId>pax-logging-api</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle/log</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ops4j.pax.logging</groupId>
                  <artifactId>pax-logging-service</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle/log</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ow2.bundles</groupId>
                  <artifactId>ow2-util-i18n</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ow2.bundles</groupId>
                  <artifactId>ow2-util-log</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>

                <!-- OSGi -->
                <artifactItem>
                  <groupId>org.osgi</groupId>
                  <artifactId>org.osgi.compendium</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.configadmin</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.eventadmin</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.fileinstall</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>

                <!-- HTTP -->
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.http.jetty</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>

                <!-- iPOJO -->
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.ipojo</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.ipojo.handler.eventadmin</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.ipojo.handler.extender</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>

                <!-- GraniteDS -->
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-core</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-gravity-ea</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-gravity-jms</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-gravity</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/bundle</outputDirectory>
                </artifactItem>

                <!-- Kerneos -->
                <artifactItem>
                  <groupId>org.ow2.kerneos</groupId>
                  <artifactId>kerneos-core-server</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/load</outputDirectory>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ow2.kerneos</groupId>
                  <artifactId>kerneos-profile-fileinstall</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/load</outputDirectory>
                </artifactItem>

                <!-- Application -->
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${application.artifactId}</artifactId>
                  <overWrite>true</overWrite>
                  <outputDirectory>${project.build.directory}/load</outputDirectory>
                </artifactItem>

                <!-- Modules -->
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>assemble</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>