<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${rootArtifactId}-packaging</artifactId>
    <version>${version}</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <modelVersion>4.0.0</modelVersion>

  <groupId>${groupId}</groupId>
  <artifactId>${artifactId}</artifactId>

  <name>${groupId} :: ${rootArtifactId} :: Packaging :: Jonas</name>

  <packaging>pom</packaging>

  <build>
    <plugins>
      <plugin>
        <!-- Before the assembly execution, place the bundles in the appropriate directory-->
        <groupId>org.ow2.util.maven</groupId>
        <artifactId>maven-jbuilding-plugin</artifactId>
        <inherited>true</inherited>
        <configuration>

          <deploymentPlans>
            <!-- Definition of Deployment plan for ApplicationTest -->
            <deploymentPlan>
              <name>${rootArtifactId}-deployment-plan</name>

              <artifactItems>
                <!-- OSGi -->
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.configadmin</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.eventadmin</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.fileinstall</artifactId>
                  <type>jar</type>
                </artifactItem>

                <!-- iPOJO -->
                <artifactItem>
                  <groupId>org.apache.felix</groupId>
                  <artifactId>org.apache.felix.ipojo.handler.eventadmin</artifactId>
                  <type>jar</type>
                </artifactItem>

                <!-- GraniteDS OSGi -->
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-core</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-gravity</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-gravity-ea</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.graniteds-osgi</groupId>
                  <artifactId>granite-gravity-jms</artifactId>
                  <type>jar</type>
                </artifactItem>

                <!-- Kerneos 2 -->
                <artifactItem>
                  <groupId>org.ow2.kerneos</groupId>
                  <artifactId>kerneos-core-server</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ow2.kerneos</groupId>
                  <artifactId>kerneos-login-loginmodule</artifactId>
                  <type>jar</type>
                </artifactItem>
                <artifactItem>
                  <groupId>org.ow2.kerneos</groupId>
                  <artifactId>kerneos-profile-fileinstall</artifactId>
                  <type>jar</type>
                </artifactItem>

                <!-- Application -->
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${rootArtifactId}-application</artifactId>
                  <type>jar</type>
                </artifactItem>

              </artifactItems>
            </deploymentPlan>
          </deploymentPlans>

          <profile>
            <include>${rootArtifactId}-deployment-plan</include>
          </profile>
        </configuration>

        <executions>
          <execution>
            <id>generate-jonas-services-maven2-deployment-plans</id>
            <goals>
              <goal>generate-maven2-deployment-plans</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <directory>repositories/url-internal</directory>
              <output>${project.build.directory}</output>
            </configuration>
          </execution>

          <execution>
            <id>copy-jonas-artifacts</id>
            <goals>
              <goal>assemble</goal>
            </goals>
            <phase>generate-sources</phase>
            <configuration>
              <directory>repositories/maven2-internal</directory>
              <output>${project.build.directory}</output>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- copy url internal xml files to deploy folder -->
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.5</version>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/deploy</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.build.directory}/repositories/url-internal/</directory>
                  <filtering>false</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Build zip file -->
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly.xml</descriptor>
          </descriptors>

        </configuration>
        <executions>
          <execution>
            <id>assemble</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>