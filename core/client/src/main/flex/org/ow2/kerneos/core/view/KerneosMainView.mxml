<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009"
           xmlns:mx="library://ns.adobe.com/flex/mx"
           xmlns:view="org.ow2.kerneos.core.view.*"
           width="100%"
           height="100%"
           creationPolicy="all"
           currentState="{KerneosModelLocator.getInstance().state}">

    <fx:Metadata>
        <![CDATA[
        /**
         * The main view of Kerneos.
         *
         * Switches between children views depending on the state of the application.
         *
         * @author Julien Nicoulaud
         * @author Guillaume Renault
         */
        ]]>
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
        import mx.managers.DragManager;
        import mx.managers.HistoryManager;

        import com.adobe.cairngorm.control.CairngormEventDispatcher;

        import org.ow2.kerneos.common.event.ServerSideExceptionEvent;
        import org.ow2.kerneos.core.model.KerneosState;
        import org.ow2.kerneos.core.model.KerneosModelLocator;
        import org.ow2.kerneos.core.managers.KerneosLifeCycleManager;
        import org.ow2.kerneos.core.vo.AuthenticationVO;
        import org.ow2.kerneos.login.model.LoginModelLocator;
        import org.ow2.kerneos.login.model.LoginState;
        import org.ow2.kerneos.profile.model.ProfileModelLocator;
        import org.ow2.kerneos.profile.model.ProfileState;

        // =========================================================================
        // Variables
        // =========================================================================

        // Dummy: flex SDK bugs workarounds

        /**
         * The application drag&drop manager
         * Dummy: workaround for a bug with module loaders and drag&drop
         * @see http://bugs.adobe.com/jira/browse/SDK-12061
         */
        private var dragManager:DragManager;

        /**
         * The flash player history manager.
         * Dummy: workaround for a bug with modules loaders and modules using
         * ViewStacks (=> TabNavigators too)
         * @see http://bugs.adobe.com/jira/browse/SDK-15249
         */
        private var hist:HistoryManager;


        // =========================================================================
        // Initialization
        // =========================================================================

        /**
         * On component creation complete.
         */
        public function initializeView(e:Event = null):void {
            // Listen to server side exceptions events
            CairngormEventDispatcher.getInstance().addEventListener(ServerSideExceptionEvent.SERVER_SIDE_EXCEPTION + KerneosModelLocator.getInstance().componentID, ServerSideExceptionEvent.show, false, 0, true);

            // Listen to keyboards events at the "application" level
            parentApplication.addEventListener(KeyboardEvent.KEY_UP, keyHandler, false, 0, true);

            // Switch to the "loading" state
            KerneosModelLocator.getInstance().state = KerneosState.LOADING;
        }


        // =========================================================================
        // Keyboard shortcuts handling
        // =========================================================================

        /**
         * Handles keyboard events
         */
        private function keyHandler(event:KeyboardEvent):void {
            switch (event.keyCode) {
                case 116: // keycode for F5
                    KerneosLifeCycleManager.reloadPage();
                    break;
            }
        }

        /**
         * Handles login state changes
         */
        private function set loginChanged(loginState:String):void {
            KerneosLifeCycleManager.stateChanged(KerneosModelLocator.getInstance().state, loginState, ProfileModelLocator.getInstance().state);
        }

        /**
         * Handles profile state changes
         */
        private function set profileChanged(profileState:String):void {
            KerneosLifeCycleManager.stateChanged(KerneosModelLocator.getInstance().state, LoginModelLocator.getInstance().state, profileState);
        }

        /**
         * Handles kerneos state changes
         */
        private function set applicationChanged(applicationState:String):void {
            KerneosLifeCycleManager.stateChanged(applicationState, LoginModelLocator.getInstance().state, ProfileModelLocator.getInstance().state);
        }
        ]]>
    </fx:Script>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- Bindings                                                                -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <!-- The binding triggered when the application is loaded. -->
    <fx:Binding source="KerneosModelLocator.getInstance().state"
                destination="applicationChanged"/>

    <!-- The binding triggered when the login status is changed. -->
    <fx:Binding source="LoginModelLocator.getInstance().state"
                destination="loginChanged"/>

    <!-- The binding triggered when the profile status is changed. -->
    <fx:Binding source="ProfileModelLocator.getInstance().state"
                destination="profileChanged"/>


    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- Views                                                                   -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <view:LoadingView includeIn="loading"
                      id="loadingView"
                      width="100%"
                      height="100%"/>

    <view:ApplicationTitle includeIn="loaded"
                           id="applicationTitle"
                           width="1000"
                           height="80"
                           top="10"
                           right="10"/>

    <view:DesktopView includeIn="desktop"
                      id="desktopView"
                      width="100%"
                      height="100%"/>

    <!-- Use visible property for forcing hide of login window when skipping login -->
    <view:LoginView includeIn="login"
                    visible="{KerneosModelLocator.getInstance().state == KerneosState.LOGIN}"
                    id="loginView"
                    width="100%"
                    height="100%"/>

    <!-- Use visible property for forcing hide of profile window when skipping profile -->
    <view:ProfileView includeIn="profile"
                      visible="{KerneosModelLocator.getInstance().state == KerneosState.PROFILE}"
                      id="profileView"
                      width="100%"
                      height="100%"/>


    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- States                                                                  -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <mx:states>
        <!-- Initial state-->
        <mx:State name="init"/>

        <!-- When loading -->
        <mx:State name="loading"/>

        <!-- When the config is loaded -->
        <mx:State name="applicationLoaded" stateGroups="loaded"/>

        <!-- Working view -->
        <mx:State name="desktop" stateGroups="loaded" enterState="desktopView.callLater(desktopView.loadModules)"
                  exitState="desktopView.callLater(desktopView.unloadModules)"/>

        <!-- Login view -->
        <mx:State name="login" stateGroups="loaded"/>

        <!-- Login view -->
        <mx:State name="profile" stateGroups="loaded"/>

        <!-- When server connexion lost -->
        <mx:State name="disconnected"/>

    </mx:states>


    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- Transitions                                                             -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <mx:transitions>
        <mx:Transition toState="desktop">
            <mx:Parallel>
                <mx:Fade target="{applicationTitle}"
                         duration="3000"
                         alphaFrom="0.0"
                         alphaTo="1.0"/>
                <mx:Sequence>
                    <mx:Glow duration="1500"
                             alphaFrom="0.0"
                             alphaTo="0.0"
                             blurXFrom="0.0"
                             blurXTo="0.0"
                             blurYFrom="0.0"
                             blurYTo="0.0"
                             color="0x000000"
                             target="{applicationTitle}"/>
                    <mx:Glow duration="500"
                             alphaFrom="0.0"
                             alphaTo="0.5"
                             blurXFrom="0.0"
                             blurXTo="15.0"
                             blurYFrom="0.0"
                             blurYTo="15.0"
                             color="0x000000"
                             target="{applicationTitle}"/>
                    <mx:Glow duration="500"
                             alphaFrom="0.5"
                             alphaTo="0.0"
                             blurXFrom="15.0"
                             blurXTo="0.0"
                             blurYFrom="15.0"
                             blurYTo="0.0"
                             color="0x000000"
                             target="{applicationTitle}"/>
                </mx:Sequence>
                <mx:Fade id="taskBarFadeIn"
                         target="{desktopView.taskBar}"
                         duration="2000"
                         alphaFrom="0.0"
                         alphaTo="1.0"/>
                <mx:Fade id="modulesListFadeIn"
                         target="{desktopView.windowContainer}"
                         duration="700"
                         alphaFrom="0.0"
                         alphaTo="1.0"/>
                <mx:Blur id="modulesListBlurIn"
                         target="{desktopView.windowContainer}"
                         duration="900"
                         blurXFrom="100"
                         blurYFrom="5"
                         blurXTo="0"
                         blurYTo="0"/>
            </mx:Parallel>
        </mx:Transition>
    </mx:transitions>
</mx:Canvas>
