<assembly
 xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

  <id>jonas</id>

  <formats>
    <format>zip</format>
  </formats>

  <includeBaseDirectory>true</includeBaseDirectory>

  <fileSets>
     <fileSet>
      <directory>src/main/load</directory>
      <outputDirectory>load</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/deploy</directory>
      <outputDirectory>deploy</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/repositories</directory>
      <outputDirectory>repositories</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>