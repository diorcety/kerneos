<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.ow2</groupId>
    <artifactId>ow2</artifactId>
    <version>1.1</version>
  </parent>
  <groupId>org.ow2.jasmine.kerneos</groupId>
  <artifactId>kerneos</artifactId>
  <version>1.3.1-SNAPSHOT</version>

  <name>Kerneos</name>
  <packaging>pom</packaging>

  <url>
    http://wiki.jasmine.objectweb.org/xwiki/bin/view/Main/WebHome
  </url>

  <properties>

    <!-- Dependencies version numbers -->
    <flexlib.version>r169</flexlib.version>
    <flexiframe.version>1.4.3</flexiframe.version>
    <flex.version>3.5.0.12683</flex.version>
    <graniteds.version>2.0.0.SP1</graniteds.version>
    <flexmojos.version>3.5.0</flexmojos.version>
    <licence.flexbuilder3>${env.FLEX_LICENSE}</licence.flexbuilder3>

    <!-- Settings -->
    <asdoc.aggregate>true</asdoc.aggregate>

  </properties>

  <scm>
    <connection>scm:svn:svn://svn.forge.objectweb.org/svnroot/jasmine/kerneos/trunk</connection>
    <developerConnection>scm:svn:svn+ssh://${maven.username}@svn.forge.objectweb.org/svnroot/jasmine/kerneos/trunk</developerConnection>
    <url>http://fisheye.jasmine.objectweb.org/browse/JASMINe/kerneos/trunk</url>
  </scm>

  <repositories>
    <repository>
      <id>flexmojos-repository</id>
      <url>http://repository.sonatype.org/content/groups/flexgroup/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>java-net</id>
      <url>http://download.java.net/maven/2/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>flex-iframe</id>
      <url>http://flex-iframe.googlecode.com/svn/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>flexmojos-repository</id>
      <name>FlexMojos repository on Sonatype.org</name>
      <url>http://repository.sonatype.org/content/groups/public/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>

  <profiles>

    <!-- Default build profile -->
    <profile>
      <id>install</id>
      <activation>
          <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <defaultGoal>install</defaultGoal>
      </build>
      <modules>
        <module>modules</module>
        <module>assemblies</module>
      </modules>
    </profile>

    <!-- WTP configuration profile -->
    <profile>
      <id>initWTP</id>
      <dependencies>
        <dependency>
          <groupId>flexlib</groupId>
          <artifactId>flexlib-bin</artifactId>
          <version>${flexlib.version}</version>
          <type>swc</type>
        </dependency>
        <dependency>
          <groupId>com.google.code</groupId>
          <artifactId>flex-iframe</artifactId>
          <version>${flexiframe.version}</version>
          <type>swc</type>
        </dependency>
        <dependency>
          <groupId>org.apache.geronimo.specs</groupId>
          <artifactId>geronimo-jms_1.1_spec</artifactId>
          <version>1.1</version>
        </dependency>
        <dependency>
          <groupId>log4j</groupId>
          <artifactId>apache-log4j-extras</artifactId>
          <version>1.0</version>
        </dependency>
        <dependency>
          <groupId>org.ow2.carol</groupId>
          <artifactId>carol</artifactId>
          <version>3.0.5</version>
        </dependency>
        <dependency>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging-api</artifactId>
          <version>1.1</version>
        </dependency>
        <dependency>
          <groupId>org.graniteds</groupId>
          <artifactId>granite-core</artifactId>
          <version>${graniteds.version}</version>
        </dependency>
        <dependency>
          <groupId>org.objectweb.monolog</groupId>
          <artifactId>monolog</artifactId>
          <version>2.1.11</version>
        </dependency>
        <dependency>
          <groupId>commons-fileupload</groupId>
          <artifactId>commons-fileupload</artifactId>
          <version>1.2.1</version>
        </dependency>
        <dependency>
          <groupId>commons-io</groupId>
          <artifactId>commons-io</artifactId>
          <version>1.4</version>
        </dependency>
        <dependency>
          <groupId>org.ow2.bundles</groupId>
          <artifactId>ow2-bundles-externals-jaxb2</artifactId>
          <version>1.0.17</version>
        </dependency>
        <dependency>
          <groupId>org.graniteds</groupId>
          <artifactId>granite-swc</artifactId>
          <version>${graniteds.version}</version>
          <type>swc</type>
        </dependency>
      </dependencies>
      <build>
        <defaultGoal>compile</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-dependency-plugin</artifactId>
            <version>2.0-alpha-4</version>
            <executions>
              <execution>
                <phase>compile</phase>
                <goals>
                  <goal>copy</goal>
                </goals>
                <configuration>
                  <artifactItems>
                    <!-- usefull if the war is deployed on tomcat in Eclipse -->
                    <artifactItem>
                      <groupId>org.ow2.carol</groupId>
                      <artifactId>carol</artifactId>
                      <version>3.0.5</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>commons-logging</groupId>
                      <artifactId>commons-logging-api</artifactId>
                      <version>1.1</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>org.ow2.bundles</groupId>
                      <artifactId>ow2-bundles-externals-jaxb2</artifactId>
                      <version>1.0.17</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>org.graniteds</groupId>
                      <artifactId>granite-core</artifactId>
                      <version>${graniteds.version}</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>log4j</groupId>
                      <artifactId>apache-log4j-extras</artifactId>
                      <version>1.0</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>org.objectweb.monolog</groupId>
                      <artifactId>monolog</artifactId>
                      <version>2.1.11</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>commons-fileupload</groupId>
                      <artifactId>commons-fileupload</artifactId>
                      <version>1.2.1</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>commons-io</groupId>
                      <artifactId>commons-io</artifactId>
                      <version>1.4</version>
                      <type>jar</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        wtp/content/WEB-INF/lib
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>com.adobe.cairngorm</groupId>
                      <artifactId>cairngorm-bin</artifactId>
                      <version>2.2.2-Beta</version>
                      <type>swc</type>
                      <classifier>kerneos</classifier>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        libs
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>org.graniteds</groupId>
                      <artifactId>granite-swc</artifactId>
                      <version>${graniteds.version}</version>
                      <type>swc</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        libs
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>flexlib</groupId>
                      <artifactId>flexlib-bin</artifactId>
                      <version>${flexlib.version}</version>
                      <type>swc</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        libs
                      </outputDirectory>
                    </artifactItem>

                    <artifactItem>
                      <groupId>com.google.code</groupId>
                      <artifactId>flex-iframe</artifactId>
                      <version>${flexiframe.version}</version>
                      <type>swc</type>
                      <overWrite>true</overWrite>
                      <outputDirectory>
                        libs
                      </outputDirectory>
                    </artifactItem>

                  </artifactItems>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- Asdoc generation profile -->
    <profile>
      <id>asdoc</id>
      <dependencies>
        <dependency>
          <groupId>com.adobe.flex.framework</groupId>
          <artifactId>flex-framework</artifactId>
          <version>${flex.version}</version>
          <type>pom</type>
        </dependency>
        <dependency>
          <groupId>com.adobe.cairngorm</groupId>
          <artifactId>cairngorm-bin</artifactId>
          <version>2.2.2-Beta</version>
          <type>swc</type>
          <classifier>kerneos</classifier>
        </dependency>
        <dependency>
          <groupId>flexlib</groupId>
          <artifactId>flexlib-bin</artifactId>
          <type>swc</type>
          <version>${flexlib.version}</version>
        </dependency>
        <dependency>
          <groupId>com.google.code</groupId>
          <artifactId>flex-iframe</artifactId>
          <version>${flexiframe.version}</version>
          <type>swc</type>
        </dependency>
        <dependency>
          <groupId>org.graniteds</groupId>
          <artifactId>granite-swc</artifactId>
          <version>${graniteds.version}</version>
          <type>swc</type>
        </dependency>
      </dependencies>
      <modules>
        <module>modules</module>
      </modules>
      <build>
        <plugins>
          <plugin>
            <groupId>org.sonatype.flexmojos</groupId>
            <artifactId>flexmojos-maven-plugin</artifactId>
            <version>${flexmojos.version}</version>
            <configuration>
              <windowTitle>JASMINe-Kerneos Asdoc</windowTitle>
              <mainTitle>JASMINe-Kerneos Asdoc - http://jasmine.ow2.org</mainTitle>
              <leftFramesetWidth>300</leftFramesetWidth>
              <footer>OW2 JASMINe Kerneos - http://jasmine.ow2.org</footer>
              <outputDirectory>${project.build.directory}/asdoc-all</outputDirectory>
              <packageDescriptions>
                <org.ow2.jasmine.kerneos.common.business>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.business>
                <org.ow2.jasmine.kerneos.common.containers>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.containers>
                <org.ow2.jasmine.kerneos.common.controls>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.controls>
                <org.ow2.jasmine.kerneos.common.event>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.event>
                <org.ow2.jasmine.kerneos.common.renderers>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.renderers>
                <org.ow2.jasmine.kerneos.common.skins>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.skins>
                <org.ow2.jasmine.kerneos.common.util>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.util>
                <org.ow2.jasmine.kerneos.common.view>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.view>
                <org.ow2.jasmine.kerneos.common.vo>Kerneos common libraries.</org.ow2.jasmine.kerneos.common.vo>
                <org.ow2.jasmine.kerneos.core.api>Kerneos API.</org.ow2.jasmine.kerneos.core.api>
                <org.ow2.jasmine.kerneos.core.business>Kerneos core.</org.ow2.jasmine.kerneos.core.business>
                <org.ow2.jasmine.kerneos.core.command>Kerneos core.</org.ow2.jasmine.kerneos.core.command>
                <org.ow2.jasmine.kerneos.core.control>Kerneos core.</org.ow2.jasmine.kerneos.core.control>
                <org.ow2.jasmine.kerneos.core.event>Kerneos core.</org.ow2.jasmine.kerneos.core.event>
                <org.ow2.jasmine.kerneos.core.managers>Kerneos core.</org.ow2.jasmine.kerneos.core.managers>
                <org.ow2.jasmine.kerneos.core.model>Kerneos core.</org.ow2.jasmine.kerneos.core.model>
                <org.ow2.jasmine.kerneos.core.view>Kerneos core.</org.ow2.jasmine.kerneos.core.view>
                <org.ow2.jasmine.kerneos.core.view.notification>Kerneos core.</org.ow2.jasmine.kerneos.core.view.notification>
                <org.ow2.jasmine.kerneos.core.view.preloader>Kerneos core.</org.ow2.jasmine.kerneos.core.view.preloader>
                <org.ow2.jasmine.kerneos.core.view.window>Kerneos core.</org.ow2.jasmine.kerneos.core.view.window>
                <org.ow2.jasmine.kerneos.core.vo>Kerneos core.</org.ow2.jasmine.kerneos.core.vo>
                <org.ow2.jasmine.kerneos.login.business>Kerneos login libraries.</org.ow2.jasmine.kerneos.login.business>
                <org.ow2.jasmine.kerneos.login.command>Kerneos login libraries.</org.ow2.jasmine.kerneos.login.command>
                <org.ow2.jasmine.kerneos.login.control>Kerneos login libraries.</org.ow2.jasmine.kerneos.login.control>
                <org.ow2.jasmine.kerneos.login.event>Kerneos login libraries.</org.ow2.jasmine.kerneos.login.event>
                <org.ow2.jasmine.kerneos.login.model>Kerneos login libraries.</org.ow2.jasmine.kerneos.login.model>
                <org.ow2.jasmine.kerneos.login.view>Kerneos login libraries.</org.ow2.jasmine.kerneos.login.view>
              </packageDescriptions>
            </configuration>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>asdoc</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.sonatype.flexmojos</groupId>
          <artifactId>flexmojos-maven-plugin</artifactId>
          <version>${flexmojos.version}</version>
          <extensions>true</extensions>
          <dependencies>
            <dependency>
              <groupId>com.adobe.flex</groupId>
              <artifactId>license</artifactId>
              <version>${flex.version}</version>
            </dependency>
            <dependency>
              <groupId>com.adobe.flex</groupId>
              <artifactId>compiler</artifactId>
              <version>${flex.version}</version>
              <type>pom</type>
            </dependency>
          </dependencies>
        </plugin>
      </plugins>
    </pluginManagement>
    
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
